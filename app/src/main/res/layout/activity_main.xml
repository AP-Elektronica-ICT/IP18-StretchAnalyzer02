<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.eaict.stretchalyzer2.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:orientation="vertical"
        android:background="#ffffff"
        android:weightSum="10">

        //Header
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:text="Stretchalyzer"
            android:textColor="#cf2b29"
            android:textSize="18pt"
            android:layout_weight="3"
            android:paddingTop="15dp"/>


        //Form
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="6">

            <EditText
                android:id="@+id/txtName"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/edittextborder"
                android:ems="10"
                android:hint="Email"
                android:inputType="textPersonName"
                android:paddingStart="5pt"
                tools:layout_editor_absoluteX="43dp"
                tools:layout_editor_absoluteY="96dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/txtPassword"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/edittextborder"
                android:ems="10"
                android:hint="Password"
                android:inputType="textAutoCorrect|textPassword"
                android:paddingStart="5pt"
                tools:layout_editor_absoluteX="43dp"
                tools:layout_editor_absoluteY="165dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/edittextborder"
                android:onClick="onClickLogin"
                android:text="Login"
                tools:layout_editor_absoluteX="43dp"
                tools:layout_editor_absoluteY="240dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittextborder"
                android:onClick="onClickRegister"
                android:text="Register"
                tools:layout_editor_absoluteX="43dp"
                tools:layout_editor_absoluteY="311dp" />

            <TextView
                android:id="@+id/txtForgotPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="@string/ForgotPassw"
                android:gravity="center"/>
        </LinearLayout>



        //Icons
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Login with"
                android:paddingLeft="10dp"/>

            <ImageButton
                android:id="@+id/imgFB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/facebook"
                android:scaleType="fitCenter"
                android:background="#FFFFFF"/>

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/googleplus"
                android:scaleType="fitCenter"
                android:background="#FFFFFF"/>

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/linkedin"
                android:scaleType="fitCenter"
                android:background="#FFFFFF"/>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
